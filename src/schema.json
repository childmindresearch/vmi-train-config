{
  "type": "object",
  "properties": {
    "rooms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the room",
            "default": "Room Name"
          },
          "seed": {
            "type": "integer",
            "description": "Seed for the random number generator",
            "default": 42,
            "minimum": 0
          },
          "width": {
            "type": "number",
            "description": "Width of the room",
            "default": 20,
            "minimum": 0
          },
          "height": {
            "type": "number",
            "description": "Height of the room",
            "default": 20,
            "minimum": 0
          },
          "durationSec": {
            "type": "number",
            "description": "Duration of the room in seconds",
            "default": 20,
            "exclusiveMinimum": 0
          },
          "numDistractors": {
            "type": "integer",
            "description": "Number of distractors in the room",
            "default": 0,
            "minimum": 0
          },
          "path": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number",
                  "description": "Fraction of the room width",
                  "minimum": 0,
                  "maximum": 1
                },
                "y": {
                  "type": "number",
                  "description": "Fraction of the room height",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            },
            "minItems": 2,
            "description": "Path of the agent in the room. The minima and maxima of x and y are [0, 1]."
          },
          "timepos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "time": {
                  "type": "number",
                  "Description": "Time in seconds",
                  "minimum": 0,
                  "maximum": 1
                },
                "position": {
                  "type": "number",
                  "Description": "Position as a fraction of the total track length",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            },
            "minItems": 2
          },
          "occlusionStartStop": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "number",
                  "description": "Start of the occlusion as a fraction of the total track length.",
                  "minimum": 0,
                  "maximum": 1
                },
                "stop": {
                  "type": "number",
                  "description": "Stop of the occlusion as a fraction of the total track length.",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          },
          "jumps": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "description": "List of jump locations as a fraction of total distance travelled."
          },
          "timeposInterpolation": {
            "type": "boolean",
            "default": false,
            "description": "Whether to interpolate timepos. If true, acceleration and decceleration will be smooth."
          }
        },
        "required": [
          "seed",
          "width",
          "height",
          "durationSec",
          "numDistractors",
          "path",
          "timepos"
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "rooms"
  ]
}
